{
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "NodeNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "strict": true
  },
  "watchOptions": {
    "excludeDirectories": ["dist"]
  },
  "include": ["src/**/*"]
}
